{
  "name": "product-expiry-tracker",
  "version": "1.0.0",
  "description": "Веб-приложение для контроля сроков годности продуктов",
  "license": "ISC",
  "author": "Алина",
  "scripts": {
    "dev": "sass --watch scss:css",
    "build:scss": "sass scss:dist/css --style compressed",
    "build:js": "terser js/**/*.js -o dist/js/ --compress --no-mangle",
    "copy": "npx copyfiles -u 1 \"**/*.{html,js,png,svg,jpg,gif,json,ico}\" \"!node_modules\" \"!scss\" \"!dist\" dist/",
    "build": "npm run build:scss && npm run build:js && npm run copy",
    "lint:js": "eslint js/**/*.js",
    "lint:css": "stylelint scss/**/*.scss",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix:js": "eslint js/**/*.js --fix",
    "lint:fix:css": "stylelint scss/**/*.scss --fix"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "copyfiles": "^2.4.1",
    "eslint": "^9.39.2",
    "sass": "^1.97.2",
    "stylelint": "^15.11.0",
    "stylelint-config-standard-scss": "^11.1.0",
    "stylelint-scss": "^5.3.1",
    "terser": "5.46.0"
  }
}
